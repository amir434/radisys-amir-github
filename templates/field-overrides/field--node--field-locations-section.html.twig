{# About: Location section #}

{# tthis is index page title for the partners page : index title #}
{%
  set classes = [
    'locations-section',
    'field',
    'field--name-' ~ field_name|clean_class,
    'field--type-' ~ field_type|clean_class,
    'field--label-' ~ label_display,
    label_display == 'inline' ? 'clearfix',
  ]
%}

{# begginigg of the contents #}
<section {{ attributes.addClass(classes) }}>
<h2 class="text-center mb-5 page-anchor" id="LocationSection">Locations</h2>
<div class="container">
<div class="row "> 
  {% for item in items %}
    <div{{ item.attributes.addClass('location', 'col-md-6', 'col-lg-4') }}>{{ item.content }}</div>
  {% endfor %}
</div>
</div>
</section>
