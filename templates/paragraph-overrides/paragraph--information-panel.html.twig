{#Set vars#}
{% set panelBgImage %}
{% spaceless %}
	{{ content.field_info_panel_bg }}
{% endspaceless %}
{% endset %}

{% set colSmall %}
col-lg-5
{% endset %}
{% set colBig %}
col-lg-7
{% endset %}
{# cTo change the column order on 1 column layout  #}
{% if paragraph.field_gradient_pane_location.value == 'Left' %}
	{% set colOrder =  'Reverse-Col' %}
{% endif %}
{#End Set vars#}

<section class="info-panel">
	<div class="wrapper p-0">
		<div class="info-panel--bg p-5" style="background-image: url('{% spaceless %}{{ panelBgImage|striptags }}{% endspaceless %}')">
			<div class="container">
				<div class="wrapper p-0">

					<div class="row {{ colOrder }}">


						{% if paragraph.field_gradient_pane_location.value == 'Left' %}

							<div class="{{ colSmall }}">

								<div class="info-panel_pane pane-position-left {% if paragraph.field_gradient_pane_color.value == 'Orange' %} info-panel_pane--orange {% else %} info-panel_pane--purple {% endif %}" data-aos="fade-up" data-aos-duration="700">
									<div class="info-panel_pattern position-absolute w-100 h-100"></div>
									<h5 class="text-white info-panel--h5">{{ content.field_gradient}}</h5>
									<p class="text-white mb-0">{{ content.field_gradient_pane_body}}</p>
									<div class="mt-3">{{ content.field_add_a_check }}</div>
									{% if content.field_read_more_link[0] is empty %}
										{% else %}
											<a href="{{ content.field_read_more_link[0] }}">
												<div class="mt-3 btn-read-more btn-read-more--small">
												{% if content.field_read_more_label|render %}
												<span>{{ content.field_read_more_label }}</span>
												  {% else %}
												  <span>Learn More</span>
												{% endif %}
													<span class="icon-long-arrow-righttrendy"></span>
												</div>
											</a>
									{% endif %}
								</div>

							</div>

							<div class="{{ colBig }}">
								<div class="d-flex align-items-center h-100">
									<h2 class="text-white info-panel--h3">{{ content.field_title_over_banner}}</h2>
								</div>
							</div>

						{% else %}

							<div class="{{ colBig }}">
								<div class="d-flex align-items-center h-100">
									<h2 class="text-white info-panel--h3">{{ content.field_title_over_banner}}</h2>
								</div>
							</div>
							<div class="{{ colSmall }}">

								<div class="info-panel_pane pane-position-right  {% if paragraph.field_gradient_pane_color.value == 'Pink/Purple' %} info-panel_pane--pink-purple {% else %} info-panel_pane--purple {% endif %}" data-aos="fade-up" data-aos-duration="700">
									<div class="info-panel_pattern position-absolute w-100 h-100"></div>
									<h5 class="text-white info-panel--h5">{{ content.field_gradient }}</h5>
									<p class="text-white mb-0">{{ content.field_gradient_pane_body }}</p>
									<div class="mt-3">{{ content.field_add_a_check }}</div>
									{% if content.field_read_more_link[0] is empty %}
										{% else %}
											<a href="{{ content.field_read_more_link[0] }}">
												<div class="mt-5 btn-read-more btn-read-more--small">
													<span>Learn More</span>
													<span class="icon-long-arrow-righttrendy"></span>
												</div>
											</a>
									{% endif %}
								</div>
							</div>

						{% endif %}


					</div>


				</div>
			</div>
		</div>
	</div>
</section>

{{myVal}}
