{# About page: Location  #}
{%
  set classes = [
    'radisys-location',
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
    not paragraph.isPublished() ? 'paragraph--unpublished'
  ]
%}


{# content #}

 <div{{ attributes.addClass(classes) }}>
 <ul class="location mb-5">
    <li><h3>{{ content.field_location_name}}</h3></li>
    <li class="address">{{ content.field_location_address}}</li>
     {% for key,  value in paragraph.field_location_phone_number %}
      <li class="phone-num"> {{ paragraph.field_location_phone_number[key].value }}</li> 
     {% endfor %} 
      {% for key,  value in paragraph.field_location_email %}
      <li class="email"> {{ paragraph.field_location_email[key].value }}</li> 
     {% endfor %} 
   {% for key,  value in paragraph.field_location_fax %}
     <li class="fax"> {{ paragraph.field_location_fax[key].value }}</li>
    {% endfor %}
 </ul>
</div>

