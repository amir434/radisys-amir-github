{# Radisys :Video contents #}

{# get the image url value #}
{% if content.field_video_thumb_img %}
  {% set bg_img = content.field_video_thumb_img.0['#markup'] %}
{% endif %}


{%
  set classes = [
    'Video-content',
    'container',
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
    not paragraph.isPublished() ? 'paragraph--unpublished'
  ]
%}

 
    {% block content %}
    <div{{ attributes.addClass(classes) }}>
     	<div class="video-thmb-img" style="background-image: url('{{ bg_img }}');" data-toggle="modal" data-target="#videoModal" data-aos="zoom-in-up" data-aos-duration="800">
             <div class="video-content-wrapper ">
                 {{ content.field_video_title }}
                <img src="{{ base_path ~ directory }}/img/icons/youtube-brands.svg" alt="play button" />
                <p class="text-white">{{ content.field_video_additional_info }}</p>
            </div>
        </div>
    </div>

<!-- Modal -->
<div class="modal fade" id="videoModal"  aria-hidden="true">
  <div class="modal-dialog modal-xl">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body video-wrapper">
          {{ content.field_video_url }}
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>



{% endblock %}




