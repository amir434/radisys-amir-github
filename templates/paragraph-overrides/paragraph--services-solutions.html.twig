{% set solutionBgImage %}
{{ content.field_service_background_image }}
{% endset %}

<div class="p-0 {% if paragraph.field_column_width.value == '1/3 (33%)' %} col-lg-4 solution-block-1-3 {% elseif paragraph.field_column_width.value == '1/2 (50%)'%} col-lg-6 solution-block-1-2 {% elseif paragraph.field_column_width.value == '2/3 (66%) - Text align left'%} col-lg-8 column-text-left {% else %} col-lg-8 column-text-right {% endif %}">

	<div class="solution-block h-100 position-relative d-flex align-items-center" style="background-image: url('{% spaceless %}{{ solutionBgImage|striptags }}{% endspaceless %}')">
		<div class="solutuon-block--filter position-absolute w-100 h-100 {% if 'Purple/Pink Filter' in paragraph.field_add_a_filter.value %} filter-pink {% elseif 'Purple Filter' in paragraph.field_add_a_filter.value %} filter-purple {% elseif 'Orange Filter' in paragraph.field_add_a_filter.value %} filter-orange {% else %} filter-dark {% endif %}"></div>
		<div class="position-relative solution-block--content">
			<h5 class="text-white text-uppercase">
				<strong>{{ content.field_solution_title }}</strong>
			</h5>
			<p class="text-white">{{ content.field_solution_body }}</p>
			{% if content.field_solutions_url|render %}
				<a href="{% spaceless %}{{ content.field_solutions_url|render|remove_html_comments }}{% endspaceless %}">
					<div class="mt-2 btn-read-more btn-read-more--small">
						<span>Learn More</span>
						<span class="icon-long-arrow-righttrendy"></span>
					</div>
				</a>
			{% endif %}
		</div>
	</div>

</div>
